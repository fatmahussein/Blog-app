<ul>
 <a href="<%= user_path(@user) %>">
    <div class="user-box">
      <%= render partial: 'user_helper/user_photo', locals: { user: @user } %>
      <%= render partial: 'user_helper/user_details', locals: { user: @user } %>
    </div>
  </a>
  <% @posts.each do |post|%>
    <a href="<%= user_post_path(@user, post) %>">
      <div class="user-post">
        <div class="post">
          <h3>Post <%= raw "#" + post.id.to_s %></h3>
          <p><%= post.text %></p>
          <div class='post-interactions'>
            <span>Comments: <%= post.comment_counter %>,</span>
            <span>Likes: <%= post.like_counter %></span>
          </div>
        </div>
        <h3>Comments:</h3>
        <% post.recent_comments.each do |comment, index| %>
          <div class="post-comments">
          <span><%= comment.user.name\ %>:</span>
            <span><%= comment.text %></span>
          </div>
        <% end %>
      </div>
    </a>
  <% end %>
  <a href="<%= users_path() %>" class='pagination'>
    <button class='pagination-btn'>Pagination</button>
  </a>
</ul>